<Page class="pageProperties" xmlns="http://schemas.nativescript.org/tns.xsd" loaded="PageLoaded">
  <StackLayout>
    <Label class="title" text="Dare"> </Label>
   <Label text="{{message}}"> </Label>
  <TextField class="TextFields" text="{{Username}}" hint="Username"></TextField>
   <TextField class="TextFields" text="{{Email}}" hint="Email Address" keyboardType="email"></TextField>
   <TextField class="TextFields" text="{{Password}}" hint="Password" secure="true"></TextField>
   
   <Button id="loginButton" class="TextFields" text="Log in" tap="{{login}}"> </Button>
   <Button id="registrerUserButton" text="Registrer a new user" tap="{{SignUp}}"> </Button>


  <Label text="{{M_Dare}}"> </Label>
   <Repeater items="{{items}}"> 
      <Repeater.itemTemplate> 
        <Label text="{{ name }}"> </Label>
      </Repeater.itemTemplate>
   </Repeater>
  </StackLayout>
</Page>