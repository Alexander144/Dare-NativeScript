<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="PageLoaded">
  <StackLayout>
   <Label text="{{message}}"> </Label>
  <TextField text="{{Username}}" hint="Username"></TextField>
   <TextField text="{{Email}}" hint="Email Address" keyboardType="email"></TextField>
   <TextField text="{{Password}}" hint="Password" secure="true"></TextField>
   
   <Button text="Log in" tap="{{login}}"> </Button>
   <Button text="Sign Up" tap="{{SignUp}}"> </Button>
   <Button text="Send push" tap="{{Send}}"> </Button>
  <Label text="{{M_Dare}}"> </Label>
   <Repeater items="{{items}}"> 
      <Repeater.itemTemplate> 
        <Label text="{{ name }}"> </Label>
      </Repeater.itemTemplate>
   </Repeater>
  </StackLayout>
</Page>